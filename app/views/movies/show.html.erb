<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @movie.title %>
</p>

<p>
  <strong>Category:</strong>
  <%= @movie.category %>
</p>

<strong>Cast:</strong>
<ul>
  <% @movie.casts.each do |cast| %>
    <li><%= link_to cast.actor.name, cast.actor %></li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_movie_path(@movie) %> |
